<% content_for :title, "ログイン" %>

<div>
    <h1>ログイン</h1>

    <%= form_with url: login_path, local: true do |form| %>
    <div>
        <%= form.label :login, "ユーザー名またはメールアドレス" %>
        <%= form.text_field :login, required: true %>
    </div>

    <div>
        <%= form.label :password, "パスワード" %>
        <%= form.password_field :password, required: true %>
    </div>

    <div>
        <%= form.submit "ログイン" %>
    </div>
    <% end %>

    <div>
        <p>アカウントをお持ちでない方は</p>
        <%= link_to "新規登録はこちら", signup_path %>
    </div>
</div>