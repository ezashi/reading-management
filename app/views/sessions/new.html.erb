<% content_for :title, "ログイン" %>

<div class="form-container">
    <h1 class="form-title">ログイン</h1>

    <%= form_with url: login_path, local: true do |form| %>
    <div class="form-group">
        <%= form.label :login, "ユーザー名またはメールアドレス", class: "form-label" %>
        <%= form.text_field :login, required: true, class: "form-input" %>
    </div>

    <div class="form-group">
        <%= form.label :password, "パスワード", class: "form-label" %>
        <%= form.password_field :password, required: true, class: "form-input" %>
    </div>

    <div class="form-actions">
        <%= form.submit "ログイン", class: "btn btn-primary" %>
    </div>
    <% end %>

    <div style="text-align: center; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e5e7eb;">
        <p style="color: #6b7280; margin-bottom: 1rem;">アカウントをお持ちでない方は</p>
        <%= link_to "新規登録はこちら", signup_path, class: "btn btn-secondary" %>
    </div>
</div>